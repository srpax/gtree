{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "(debug) build",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-std=c++20",
				"-g",
				"${workspaceFolder}/src/*.cpp",
				"-o",
				"${workspaceFolder}/build/out/debug/gtree"
			],
			"options": {
				"cwd": "${workspaceFolder}/build/out/debug"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build"
			},
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "cppbuild",
			"label": "(release) build",
			"command": "/usr/bin/g++",
			"args": [
				"-O2",
				"-Wall",
				"-std=c++20",
				"${workspaceFolder}/src/*.cpp",
				"-o",
				"${workspaceFolder}/build/out/release/gtree"
			],
			"options": {
				"cwd": "${workspaceFolder}/build/out/release"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}